<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yulu.zhaoxinpeng.myeasyshop_2017_4_13">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- SD卡读写权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".main.EasyShopApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".main.MainActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".main.SplashActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".User.Login.LoginActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".User.Registe.RegisteActivity"
            android:launchMode="singleTask" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".main.me.personInfo.PersonActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".main.me.personInfo.nickname.Nick_NameActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".main.shop.details.GoodsDetailActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".main.shop.details.GoodsDetailPicActivity"
            android:launchMode="singleTask" />
        <activity android:name=".main.me.personGoods.PersonGoodsActivity"
            android:launchMode="singleTask"></activity>
    </application>

</manifest>